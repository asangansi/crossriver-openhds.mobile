<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Vaccination</h:title>
    <model>
      <instance>
        <data id="vaccination">
          <derivedFromUri />
					<processedByMirth>0</processedByMirth>
					<validationFailed>0</validationFailed>
          <supervisorStatus />
          <childId/>
          <collectedBy/>
          <dates>
            <bcg/>
            <polio1/>
            <polio2/>
            <polio3/>
            <polio4/>
            <dpt1/>
            <dpt2/>
            <dpt3/>
            <measels/>
          </dates>
          <bcgScar/>
          <dropInMouth/>
          <injectionOnThigh/>
        </data>
      </instance>
      <itext>
        <translation lang="eng">
          <text id="/data/childId:label">
            <value>Child Id</value>
          </text>
          <text id="/data/childId:hint">
            <value/>
          </text>
          <text id="/data/collectedBy:label">
            <value>Collected By</value>
          </text>
          <text id="/data/collectedBy:hint">
            <value/>
          </text>
          <text id="/data/dates:label">
            <value>Enter 07/07/1907 if the child has no dates to indicate particular antigen was given</value>
          </text>
          <text id="/data/dates/bcg:label">
            <value>BCG</value>
          </text>
          <text id="/data/dates/bcg:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/polio1:label">
            <value>First Polio</value>
          </text>
          <text id="/data/dates/polio1:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/polio2:label">
            <value>Second Polio</value>
          </text>
          <text id="/data/dates/polio2:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/polio3:label">
            <value>Third Polio</value>
          </text>
          <text id="/data/dates/polio3:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/polio4:label">
            <value>Fourth Polio</value>
          </text>
          <text id="/data/dates/polio4:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/dpt1:label">
            <value>First DPT</value>
          </text>
          <text id="/data/dates/dpt1:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/dpt2:label">
            <value>Second DPT</value>
          </text>
          <text id="/data/dates/dpt2:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/dpt3:label">
            <value>Third DPT</value>
          </text>
          <text id="/data/dates/dpt3:hint">
            <value>(dd-MM-yyyy) </value>
          </text>
          <text id="/data/dates/measels:label">
            <value>Measels</value>
          </text>
          <text id="/data/dates/measels:hint">
            <value>(dd-MM-yyyy)</value>
          </text>
          <text id="/data/bcgScar:label">
            <value>Has the child got a BCG scar?</value>
          </text>
          <text id="/data/bcgScar:hint">
            <value/>
          </text>
          <text id="/data/bcgScar:option0">
            <value>Yes</value>
          </text>
          <text id="/data/bcgScar:option1">
            <value>No</value>
          </text>
          <text id="/data/dropInMouth:label">
            <value>Has the child been given a drop in the mouth?</value>
          </text>
          <text id="/data/dropInMouth:hint">
            <value/>
          </text>
          <text id="/data/dropInMouth:option0">
            <value>Yes</value>
          </text>
          <text id="/data/dropInMouth:option1">
            <value>No</value>
          </text>
          <text id="/data/injectionOnThigh:label">
            <value>Has the child received an injection on the thigh?</value>
          </text>
          <text id="/data/injectionOnThigh:hint">
            <value/>
          </text>
          <text id="/data/injectionOnThigh:option0">
            <value>Yes</value>
          </text>
          <text id="/data/injectionOnThigh:option1">
            <value>No</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/childId" required="true()" type="string" constraint="regex(., '^[A-Za-z]{9}[0-9]{7}$')" jr:constraintMsg="Permanent Id is not the right format"/>
      <bind nodeset="/data/collectedBy" type="string" required="true()" constraint="regex(., '^[Ff][Ww][A-Za-z]{2}[0-9]{1}$')" jr:constraintMsg="Field Worker Id is not the right format"/>
      <bind nodeset="/data/dates/bcg" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/polio1" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/polio2" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/polio3" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/polio4" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/dpt1" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/dpt2" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/dpt3" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/dates/measels" type="date" constraint=". &lt;= today()" required="true()" jr:constraintMsg="Date cannot be in the future"/>
      <bind nodeset="/data/bcgScar" required="true()" type="select1"/>
      <bind nodeset="/data/dropInMouth" required="true()" type="select1"/>
      <bind nodeset="/data/injectionOnThigh" required="true()" type="select1"/>
			<bind nodeset="/data/derivedFromUri" type="string" />
      <bind nodeset="/data/supervisorStatus" type="int" />
      <bind nodeset="/data/processedByMirth" type="int" />
      <bind nodeset="/data/validationFailed" type="boolean" />
    </model>
  </h:head>
  <h:body>
    <input ref="/data/childId">
      <label ref="jr:itext('/data/childId:label')"/>
      <hint ref="jr:itext('/data/childId:hint')"/>
    </input>
    <input ref="/data/collectedBy">
      <label ref="jr:itext('/data/collectedBy:label')"/>
      <hint ref="jr:itext('/data/collectedBy:hint')"/>
    </input>
    <group>
      <label ref="jr:itext('/data/dates:label')"/>
      <input ref="/data/dates/bcg">
        <label ref="jr:itext('/data/dates/bcg:label')"/>
        <hint ref="jr:itext('/data/dates/bcg:hint')"/>
      </input>
      <input ref="/data/dates/polio1">
        <label ref="jr:itext('/data/dates/polio1:label')"/>
        <hint ref="jr:itext('/data/dates/polio1:hint')"/>
      </input>
      <input ref="/data/dates/polio2">
        <label ref="jr:itext('/data/dates/polio2:label')"/>
        <hint ref="jr:itext('/data/dates/polio2:hint')"/>
      </input>
      <input ref="/data/dates/polio3">
        <label ref="jr:itext('/data/dates/polio3:label')"/>
        <hint ref="jr:itext('/data/dates/polio3:hint')"/>
      </input>
      <input ref="/data/dates/polio4">
        <label ref="jr:itext('/data/dates/polio4:label')"/>
        <hint ref="jr:itext('/data/dates/polio4:hint')"/>
      </input>
      <input ref="/data/dates/dpt1">
        <label ref="jr:itext('/data/dates/dpt1:label')"/>
        <hint ref="jr:itext('/data/dates/dpt1:hint')"/>
      </input>
      <input ref="/data/dates/dpt2">
        <label ref="jr:itext('/data/dates/dpt2:label')"/>
        <hint ref="jr:itext('/data/dates/dpt2:hint')"/>
      </input>
      <input ref="/data/dates/dpt3">
        <label ref="jr:itext('/data/dates/dpt3:label')"/>
        <hint ref="jr:itext('/data/dates/dpt3:hint')"/>
      </input>
      <input ref="/data/dates/measels">
        <label ref="jr:itext('/data/dates/measels:label')"/>
        <hint ref="jr:itext('/data/dates/measels:hint')"/>
      </input>
    </group>
    <select1 ref="/data/bcgScar">
      <label ref="jr:itext('/data/bcgScar:label')"/>
      <hint ref="jr:itext('/data/bcgScar:hint')"/>
      <item>
        <label ref="jr:itext('/data/bcgScar:option0')"/>
        <value>1</value>
      </item>
      <item>
        <label ref="jr:itext('/data/bcgScar:option1')"/>
        <value>2</value>
      </item>
    </select1>
    <select1 ref="/data/dropInMouth">
      <label ref="jr:itext('/data/dropInMouth:label')"/>
      <hint ref="jr:itext('/data/dropInMouth:hint')"/>
      <item>
        <label ref="jr:itext('/data/dropInMouth:option0')"/>
        <value>1</value>
      </item>
      <item>
        <label ref="jr:itext('/data/dropInMouth:option1')"/>
        <value>2</value>
      </item>
    </select1>
    <select1 ref="/data/injectionOnThigh">
      <label ref="jr:itext('/data/injectionOnThigh:label')"/>
      <hint ref="jr:itext('/data/injectionOnThigh:hint')"/>
      <item>
        <label ref="jr:itext('/data/injectionOnThigh:option0')"/>
        <value>1</value>
      </item>
      <item>
        <label ref="jr:itext('/data/injectionOnThigh:option1')"/>
        <value>2</value>
      </item>
    </select1>
  </h:body>
</h:html>
